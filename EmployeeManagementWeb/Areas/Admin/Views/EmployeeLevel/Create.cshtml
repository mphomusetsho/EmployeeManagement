@model EmployeeLevel

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add a new employee level</h2>
        </div>
        <div class="mb-3">
            <label asp-for="LevelDescr"></label>
            <input asp-for="LevelDescr" class="form-control" />
            <span asp-validation-for="LevelDescr" class="text-danger"></span>
        </div>
   
        <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
        <a asp-controller="EmployeeLevel" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Back to list
        </a>
    </div>
</form>

@section Scripts
{
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}

