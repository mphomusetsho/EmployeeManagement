@model Employee

<form method="post" asp-action="ViewDetails">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Employee Details</h2>
        </div>

        <div class="mb-3">
            <label asp-for="EmployeeNumber"></label>
            <input asp-for="EmployeeNumber" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Surname"></label>
            <input asp-for="Surname" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="BirthDate"></label>
            <input asp-for="BirthDate" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Salary"></label>
            <input asp-for="Salary" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Role"></label>
            <input asp-for="Role" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ManagerNames"></label>
            <input asp-for="ManagerNames" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="ManagerID"></label>
            <input asp-for="ManagerID" class="form-control" disabled />
        </div>
    </div>
</form>

